# Install new dependencies first
pip install -r requirements.txt

# Check service status
python cli.py status

# Launch LangGraph dev server
python cli.py langgraph

# Launch Agent Inbox UI
python cli.py inbox

# Create and test email workflow
python cli.py email

# Get help for any command
python cli.py --help
python cli.py email --help

# Fetch latest Gmail emails and trigger workflow
python cli.py gmail                     # Fetch 1 latest email and send to workflow
python cli.py gmail --count 2           # Fetch 2 latest emails
python cli.py gmail --count 3           # Fetch 3 latest emails
python cli.py gmail --count 4           # Fetch 4 latest emails
python cli.py gmail --count 5           # Fetch 5 latest emails


# venv
source .venv/bin/activate

## agent_inbox
EMAIL_ID=email_agent
LOCAL_URL=http://127.0.0.1:2024 (use the same port as the LangGraph server)
